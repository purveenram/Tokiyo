{
  "builds": [
    {
      "src": "Tokiyo/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "60mb", "runtime": "python3.11" }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "Tokiyo/wsgi.py"
    }
  ],
  "build": {
    "env": {
      "DJANGO_SETTINGS_MODULE": "Tokiyo.settings"
    },
    "commands": {
      "predeploy": "python manage.py migrate"
    }
  }
}
